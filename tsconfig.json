{
  "compilerOptions": {
    "target": "ES6", // Chọn phiên bản ECMAScript muốn biên dịch
    "module": "CommonJS", // Dùng CommonJS module cho Node.js
    "outDir": "./dist", // Thư mục xuất file JS
    "rootDir": "./src", // Thư mục chứa mã TypeScript
    "esModuleInterop": true, // Hỗ trợ import từ CommonJS module
    "strict": true // Bật chế độ kiểm tra nghiêm ngặt
  },
  "include": ["src/**/*.ts"], // Bao gồm các file .ts từ thư mục src
  "exclude": ["node_modules"] // Loại trừ thư mục node_modules
}
